<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Promocoes_activity">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pizza_teste"
            android:id="@+id/pizzaImg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promoção 1"
                android:textSize="30sp"
                android:id="@+id/pizzaTitulo"
                android:textColor="#880A0A"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="salsicha, cove, repolho, alho, pipi"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:id="@+id/pizzaDescricao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$50,00"
                android:layout_margin="10dp"
                android:textSize="22sp"
                android:id="@+id/pizzaValor"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:textColor="#0B700F"/>





        </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>




